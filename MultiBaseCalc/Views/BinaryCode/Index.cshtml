@model int
@{
    ViewBag.Title = "Binary Code Calculator";
}

<h2>Binary Code Calculator</h2>

<form method="post" action="/BinaryCode/CalculateCodes">
    <label for="number">Enter a number:</label>
    <input type="number" id="number" name="number" required>
    <button type="submit">Calculate Codes</button>
</form>

@if (ViewBag.Number != null)
{
    <h3>Results for input @ViewBag.Number (Результати для введеного числа @ViewBag.Number):</h3>

    <h4>For +@Math.Abs(ViewBag.Number) (Для +@Math.Abs(ViewBag.Number)):</h4>
    <p>Direct Code (Прямий код): @ViewBag.DirectCodePositive</p>
    <p>Reverse Code (Зворотний код): @ViewBag.ReverseCodePositive</p>
    <p>Additional Code (Додатковий код): @ViewBag.AdditionalCodePositive</p>

    <h4>For -@Math.Abs(ViewBag.Number) (Для -@Math.Abs(ViewBag.Number)):</h4>
    <p>Direct Code (Прямий код): @ViewBag.DirectCodeNegative</p>
    <p>Reverse Code (Зворотний код): @ViewBag.ReverseCodeNegative</p>
    <p>Additional Code (Додатковий код): @ViewBag.AdditionalCodeNegative</p>
}

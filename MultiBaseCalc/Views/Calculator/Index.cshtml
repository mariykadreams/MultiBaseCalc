@model CalculatorModel

<div class="container mt-5">
    <h2>Number System Calculator</h2>
    
    @using (Html.BeginForm("Calculate", "Calculator", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div>
            <label for="BaseSystem" class="form-label">Number System Base</label>
            @Html.DropDownListFor(m => m.BaseSystem,
                     new SelectList(ViewBag.Bases),
                     new { @class = "form-select", id = "BaseSystem" })
        </div>

        <div class="form-group">
            <label>First Number:</label>
            @Html.TextBoxFor(m => m.FirstNumber, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.FirstNumber, "", new { @class = "text-danger" })
        </div>


        <div>
            <label for="Operation" class="form-label">Operation</label>
            @Html.DropDownListFor(m => m.Operation,
                     new SelectList(ViewBag.Operations),
                     new { @class = "form-select", id = "Operation" })
        </div>

        <div class="form-group">
            <label>Second Number:</label>
            @Html.TextBoxFor(m => m.SecondNumber, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.SecondNumber, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary mt-4">Calculate</button>

        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="mt-3">
                <h4>Result: @Model.Result</h4>
            </div>
        }
    }
</div>
